<section>
    <a href="/course/create" class="btn btn-warning ">Create Course</a>
    <form class="search float-right">
        <label>Search: </label>
        <input type="text">
        <input type="submit" class="btn btn-info" value="Search">
    </form>
</section>
<br>
<h1>{{title}}</h1>
<div class="container mt-3">    
    <div class="row ">
       {{#each video}} 
        <div class="card-deck d-flex justify-content-center">
            <div class="card mb-4">
                <img class="card-img-top"
                    src="{{this.imageUrl}}"
                    alt="Card image cap" width="400">
                <div class="card-body">
                    <h4 class="card-title">{{this.title}}</h4>
                </div>
                <div class="card-footer">
                    <a href="/course-details/{{_id}}"><button type="button" class="btn btn-info">Details</button></a>
                    <small class="float-right">{{this.createdAt}}</small>
                </div>                
            </div> 
        {{else}} 
            <h3 class="text-center">No courses...</h3>     
        {{/each}}
        </div>
    </div>
</div>
